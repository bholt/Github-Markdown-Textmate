	<key>command</key>
	<string>#!/usr/bin/env ruby

line = $stdin.read
col = ENV['TM_LINE_INDEX'].to_i
before_cursor = line[0...col]
after_cursor = line[col..-1]

case line
when /^\s*([0-9]+)([.):]\s+)(.*)/
  n = $~[1].to_i + 1
  fill = $~[2]
  content = $~[3]
  $stdout &lt;&lt; (content.empty? ? "\n" : "#{before_cursor}\n#{n}#{fill}#{after_cursor}")
end
</string>
